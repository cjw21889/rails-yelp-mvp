<div class="container text-center">
<h1>Restaurants</h1>
<h5 class="btn btn-warning"><%=link_to 'Add Restaurant', new_restaurant_path %></h5>

<% @restaurants.each do |restaurant| %>
  <div class="card mb-3">
    <h3> <%= restaurant.name%> </h3>
    <p> <%=  restaurant.address %> / <%= restaurant.phone_number %></p>
    <ul class="list-inline">
      <li class="list-inline-item"> <%= link_to 'view', restaurant_path(restaurant.id)  %> </li>
      <li class="list-inline-item"> <%= link_to 'edit', edit_restaurant_path(restaurant.id)  %> </li>
      <li class="list-inline-item"><%= link_to 'delete', restaurant_path(restaurant), method: :delete, data: {confirm: "Are you sure"}%> </li>
    </ul>
  </div>
<% end %>

</div>
